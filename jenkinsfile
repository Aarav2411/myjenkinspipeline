pipeline {
    agent any

    tools {
        nodejs "Node18"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/Aarav2411/myjenkinspipeline.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run App') {
            steps {
                sh 'echo "No app.js found. Skipping run."'
            }
        }
    }
}

