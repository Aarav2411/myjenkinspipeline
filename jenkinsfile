pipeline {
    agent any

    tools {
        nodejs 'node-18'  // Name must match the Node.js config in Jenkins
    }

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/Aarav2411/jenkins-pipeline-example.git'
            }
        }

        stage('Run App') {
            steps {
                sh 'node app.js'
            }
        }
    }
}

