pipeline {
  agent any

  tools {
    nodejs 'Node18'   // Ensure this matches a valid NodeJS tool in Jenkins
  }

  stages {
    stage('Install Dependencies') {
      steps {
        sh 'npm install'
      }
    }

    stage('Run App') {
      steps {
        sh 'node app.js'
      }
    }
  }

  post {
    always {
      echo 'Pipeline completed â€” cleaning up workspace.'
      deleteDir()
    }
  }
}

